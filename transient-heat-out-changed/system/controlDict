FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     chtMultiRegionFoam;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         10;

deltaT          1e-5;

writeControl    runTime;

writeInterval   0.2;

purgeWrite      0;

writeFormat     ascii;

writePrecision  8;

writeCompression uncompressed;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

libs ("libsimpleSwakFunctionObjects.so" "libgroovyBC.so");

functions
{

heat_in    {
        type patchExpression;
        region     solid;
        writeControl   timeStep;
        writeInterval    1;
        accumulations (
            sum
        );
        patches (
            heat_in
        );
        expression "200*snGrad(T)*area()";
        verbose true;
    }

heat_out    {
        type patchExpression;
        region     solid;
        writeControl   timeStep;
        writeInterval    1;
        accumulations (
            sum
        );
        patches (
            heat_out
        );
        expression "200*snGrad(T)*area()";
        verbose true;
    }

